<div class="container-fluid" id="show" style="display:none; background-color: rgb(242, 242, 242);">

   
  <div class="vintage__container" style= "display: inline-block;  margin: 25px auto 40px;
  margin: 25px auto 40px;"> 
      <p class="vintage">HOTEL MOTELS</p>
  </div>


  <div class="row adjust">
    <div class="col s1"></div>
    <div class="col s4 card z-depth-3 grey lighten-5" style="margin-top: 40px; height: 350px;">
      <form>
        <div class="form-group">
          <h5 class="navy-text text-darken-4">Guest Information</h5>
          <label for="name">Guest name:</label>
          <input type="text" class="form-control" id="guest-name">
        </div>
        <div class="form-group">
          <label for="name">Number of Guests:</label>
          <input type="text" class="form-control" id="guest-count">
        </div>
        <div class="form-group">
          <label for="name">Number of rooms:</label>
          <input type="text" class="form-control" id="guest-room-count">
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">Guest phone number:</label>
          <input type="text" class="form-control" id="guest-phone">
        </div>
        <button type="submit" class="btn indigo darken-3" id="create-guest"
          style="margin-top: 20px;">Submit Reservation<i class="material-icons right">group</i></button>
      </form>
    </div>
    <div class="col s1"></div>
    <div class="col s5 card adjust z-depth-3 grey lighten-5" style="margin-top: 40px; max-height: 300px; overflow-y: auto;">
     <h5 class="navy-text text-darken-4" style= "margin-right: 150px;">Guests who have arrived: </h5>
      <ul>
        {{#each Guest}}
