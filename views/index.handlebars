<style>

  @import url(https://fonts.googleapis.com/css?family=Satisfy); 
  @import url(https://fonts.googleapis.com/css?family=Six+Caps);

  body {
  text-align: center;
  }


  .vintage {
  font-family: 'Six Caps', sans-serif;
  font-size: 100px;
  letter-spacing: 10px;
  line-height: 1;
  margin: 0;
  position: relative;
  color: rgb(1, 1, 44);
  }


::placeholder { 
    color: rgb(30,37,55);
    opacity: 1; 
