      </table>
    </div>
    <div class="col s1"></div>
    <div class="col s5 card z-depth-4 grey lighten-5" style="margin-top: 40px; max-height: 300px; overflow-y: auto;">
      <h5 class="navy-text text-darken-4" style= "margin-right: 200px;">Checked in Guests:</h5>
      <ul>
        {{#each Guest}}
        {{#if status}}
        {{> guests/guests-block status=false}}
        <button class="btn indigo darken-3 delete" data-id="{{this.id}}">Check Out<i class="material-icons right">work</i></button>
        {{/if}}
